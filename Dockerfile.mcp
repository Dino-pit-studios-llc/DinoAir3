FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    && rm -rf /var/lib/apt/lists/*

# Create a non-root user to run the application
RUN groupadd -r mcpuser && useradd -r -g mcpuser mcpuser

# Copy requirements and install Python dependencies
COPY mcp_qdrant_requirements.txt .
RUN pip install --no-cache-dir -r mcp_qdrant_requirements.txt

# Copy application code
COPY mcp_qdrant_server.py .
COPY qdrant_mcp_config.yaml .
COPY .env.qdrant* ./

# Create logs directory and set ownership
RUN mkdir -p logs && chown -R mcpuser:mcpuser /app

# Switch to non-root user
USER mcpuser

# Expose port
EXPOSE 8080

# Set environment variables
ENV PYTHONPATH=/app
ENV QDRANT_URL=http://localhost:6333
ENV MCP_SERVER_HOST=0.0.0.0
ENV MCP_SERVER_PORT=8080

# Add health check
# NOTE: The health check below assumes that mcp_qdrant_server.py implements a /health HTTP endpoint.
# HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
#   CMD python -c "import urllib.request; urllib.request.urlopen('http://localhost:8080/health').read()" || exit 1

# Run the MCP server
CMD ["python", "mcp_qdrant_server.py"]
