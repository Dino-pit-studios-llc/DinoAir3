{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Setup venv",
      "type": "shell",
      "command": "bash",
      "args": ["-lc", "scripts/dev/bootstrap.sh"],
      "problemMatcher": []
    },
    {
      "label": "Run API (uvicorn)",
      "type": "shell",
      "command": "bash",
      "args": [
        "-lc",
        ". .venv/bin/activate && uvicorn API.app:app --reload --host 127.0.0.1 --port ${input:apiPort}"
      ],
      "problemMatcher": "$tsc",
      "group": "build"
    },
    {
      "label": "Test (pytest)",
      "type": "shell",
      "command": "bash",
      "args": ["-lc", ". .venv/bin/activate && pytest -q"],
      "problemMatcher": []
    },
    {
      "label": "Lint (ruff)",
      "type": "shell",
      "command": "bash",
      "args": ["-lc", ". .venv/bin/activate && ruff check ."],
      "problemMatcher": []
    },
    {
      "label": "Format (ruff)",
      "type": "shell",
      "command": "bash",
      "args": ["-lc", ". .venv/bin/activate && ruff format ."],
      "problemMatcher": []
    }
    ,
    {
      "label": "Pre-commit (all files)",
      "type": "shell",
      "command": "bash",
      "args": ["-lc", ". .venv/bin/activate && pre-commit run --all-files"],
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "apiPort",
      "type": "promptString",
      "description": "Port for API",
      "default": "24801"
    }
  ]
}
